{{> navbar}}
<h1>All Tracks</h1>
<span class="tag is-info is-light is-large"><strong>{{city}}</strong></span>
<br>
<br>
<table class="center table is-bordered is-hoverable">
  <thead>
    <tr>
      <th>Track Name</th>
      <th>Track Type</th>
      <th>Street Address</th>
      <th>City</th>
      <th>Availability</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each tracks}}
    <tr>
      <td>{{name}}</td>
      <td>{{trackType}}</td>
      <td>{{address}}</td>
      <td>{{city}}</td>
      <td>{{details}}</td>
      <td><button class="button is-primary is-light" id="update-btn">Update</button> <button class="button is-danger is-light" id="delete-btn">Delete</button></td>
    </tr>
    {{/each}}
  </tbody>
</table>
<img src="/assets/images/track-bottom-image.png" alt="track image" id="bottom-image" width="600px">
{{> footer}}