    <section class="hero is-dark is-gradient">
      <div class="hero-body" id="header-add-track">
        <div class="container">
          <h1 class="title is-1">Add a Track</h1>
          <h2 class="subtitle">
            Don't see your local track on the list? Add it here!
          </h2>
        </div>
      </div>
    </section>
    <div class="container">
      <br>
      <div class="columns">
        <div class="column">
