          <div class="control">
            <input class="input is-focused" type="text" placeholder="Track Name" id="name">
          </div>
          <div class="select">
            <select id="trackType">
              <option value="">Select Track Type</option>
              <option value="standard">standard</option>
              <option value="non-standard">non-standard</option>
